@using Web.Infrastructure.Helpers
@model IEnumerable<Web.Models.Presentation>

@{
    ViewBag.Title = "Home";
}

@foreach (var presentation in Model)
{
    <div class="hero-unit" id="@presentation.Id">
        <h1>@presentation.Title</h1> 
        <img class="presenter-image" src="@Url.Gravatar(@presentation.Presenter.Id, 52)" />
        <h2>with @presentation.Presenter.Name</h2>
        <h3>on @presentation.PresentationDate.ToLongDateString()</h3>
        <p class="clearfix">@presentation.Description</p>
        <p><a class="btn primary large" href="#">Next &raquo;</a></p>     
    </div>        
}

<div class="row"> 
        <div class="span5"> 
            Where when who what...
        </div> 
        <div class="span5 slideshow"> 
            <img src="@Url.Content("~/Content/images/microsoft_logo.jpg")" alt="Sponser Microsoft" />
            <img src="@Url.Content("~/Content/images/appharbor.png")" alt="Sponser Appharbor" />
            <img src="@Url.Content("~/Content/images/codesmart.png")" alt="Sponser Codesmart" />
            <img src="@Url.Content("~/Content/images/INETASponseredEvent.jpg")" alt="Sponser Ineta Sponsered Event" />
            <img src="@Url.Content("~/Content/images/Milestone_Logo_Small.jpg")" alt="Sponser Milestone" />
            <img src="@Url.Content("~/Content/images/pluralsight-fullcolor-175x50-v1.png")" alt="Sponser Pluralsight" />
            <img src="@Url.Content("~/Content/images/RavenDb_Logo.png")" alt="Sponser RavenDb" />
            <img src="@Url.Content("~/Content/images/tekpub_logo-200.png")" alt="Sponser Tekpub" />
            <img src="@Url.Content("~/Content/images/ug_discount_120x240.gif")" alt="Sponser O'reilly" />
            <img src="@Url.Content("~/Content/images/UGSS_logo.png")" alt="Sponser UGSS" />
            <img src="@Url.Content("~/Content/images/Wintellect_Logo_web.gif")" alt="Sponser Wintellect" />
       </div> 
        <div class="span6"> 
            <img src="@Url.Content("~/Content/images/location.gif")" />
        </div> 
</div>
